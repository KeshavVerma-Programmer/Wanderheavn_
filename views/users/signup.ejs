<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4 fw-bold text-success">User Signup</h2>

                    <form action="/user/signup" method="post" class="needs-validation" novalidate>
                        <!-- Username -->
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input name="username" id="username" type="text" class="form-control" required/>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input name="email" id="email" type="email" class="form-control" required/>
                        </div>

                         <!-- Phone -->
                         <div class="mb-2">
                            <label for="phone" class="form-label">Contact Number</label>
                            <input 
                                name="phone" 
                                id="phone" 
                                type="tel" 
                                pattern="[0-9]{10}" 
                                class="form-control"
                                required
                            />
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input name="password" id="password" type="password" class="form-control" required/>
                        </div>

                        <!-- Signup Button -->
                        <button class="btn btn-success w-100 fw-bold">Signup as User</button>
                    </form>

                    <!-- Additional Links -->
                    <div class="text-center mt-3">
                        <p>Want to become a host? <a href="/host/signup" class="text-primary fw-bold">Sign up as a Host</a></p>
                        <p>Already have an account? <a href="/user/login" class="text-primary fw-bold">Login here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>